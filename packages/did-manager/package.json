{
  "name": "@internet-of-people/did-manager",
  "version": "1.0.0",
  "private": false,
  "author": {
    "url": "https://iop.global/dsf",
    "name": "Internet of People",
    "email": "prometheus@iop-ventures.com"
  },
  "description": "Business model and a Hydra transaction type for managing DIDs on chain",
  "repository": "https://github.com/internet-of-people/morpheus-ts",
  "license": "LGPL-3.0-or-later",
  "main": "dist/index",
  "module": "dist/index",
  "browser": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:src && npm run build:test",
    "build:src": "tsc -p . ",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "eslint -c ../../eslintrc.json --fix \"./src/**\"",
    "lint:test": "eslint -c ../../eslintrc.test.json --fix \"./__tests__/**\"",
    "clean": "rimraf dist && rimraf node_modules",
    "test": "jest --detectOpenHandles --no-cache",
    "test:watch": "jest --detectOpenHandles --no-cache --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "testPathIgnorePatterns": ["__tests__/utils.ts"]
  },
  "dependencies": {
    "@arkecosystem/core-interfaces": "^2.6.10",
    "@arkecosystem/crypto": "^2.6.10",
    "@internet-of-people/keyvault": "1.0.0",
    "@internet-of-people/logger": "1.0.0",
    "bytebuffer": "5.0.1",
    "json-stable-stringify": "1.0.1",
    "lodash.clonedeep": "4.5.0",
    "optional-js": "2.1.1",
    "socketcluster": "^14.3.5",
    "socketcluster-client": "^14.2.2"
  },
  "devDependencies": {
    "@types/bytebuffer": "5.0.40",
    "@types/jest": "24.0.23",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/socketcluster": "^14.0.2",
    "@types/socketcluster-client": "^13.0.3",
    "@types/json-stable-stringify": "1.0.32",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "eslint": "6.7.2",
    "eslint-plugin-import": "2.19.1",
    "jest": "24.9.0",
    "jest-extended": "0.11.2",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "typescript": "3.7.2"
  }
}
