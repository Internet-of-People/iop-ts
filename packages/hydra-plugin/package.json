{
  "name": "@internet-of-people/hydra-plugin",
  "version": "5.0.0-rc.2",
  "private": false,
  "author": {
    "url": "https://iop.global/dsf",
    "name": "Internet of People",
    "email": "dev@iop-ventures.com"
  },
  "description": "A plugin for Hydra blockchain nodes that add Morpheus specific custom transaction types and a layer-2 consensus with its own state",
  "repository": "https://github.com/internet-of-people/morpheus-ts",
  "license": "GPL-3.0-or-later",
  "main": "./dist/main.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:src && npm run build:test",
    "build:src": "tsc -p . ",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "npm run lint:src & npm run lint:test",
    "lint:src": "eslint -c ../../eslintrc.json --fix \"./src/**\"",
    "lint:test": "eslint -c ../../eslintrc.test.json --fix \"./__tests__/**\"",
    "clean": "rimraf dist && rimraf node_modules",
    "test": "jest --detectOpenHandles --no-cache",
    "test:watch": "jest --detectOpenHandles --no-cache --watch"
  },
  "dependencies": {
    "@arkecosystem/core-event-emitter": "^2.7.24",
    "@arkecosystem/core-interfaces": "^2.7.24",
    "@arkecosystem/core-transactions": "^2.7.24",
    "@arkecosystem/crypto": "^2.7.24",
    "@hapi/hapi": "^18.3.1",
    "@internet-of-people/hydra-plugin-core": "5.0.0-rc.2",
    "@internet-of-people/did-manager": "5.0.0-rc.2",
    "@internet-of-people/coeus-node": "5.0.0-rc.2",
    "@internet-of-people/sdk": "5.0.0-rc.2",
    "awilix": "^4.2.2",
    "optional-js": "2.1.1",
    "p-queue": "6.2.1"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^18.2.5",
    "@types/jest": "24.9.0",
    "@types/node": "12.12.14",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "eslint": "6.7.2",
    "jest": "24.9.0",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true
  }
}