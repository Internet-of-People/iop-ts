{
  "name": "@internet-of-people/morpheus-hydra-plugin",
  "version": "0.1.0-alpha.1",
  "private": true,
  "license": "GPL-3.0-or-later",
  "author": {
    "url": "https://iop.global/dsf",
    "name": "Internet of People",
    "email": "prometheus@iop-ventures.com"
  },
  "description": "A plugin for Hydra blockchain nodes that add Morpheus specific custom transaction types and a layer 2 consensus with its own state",
  "main": "./dist/main.js",
  "scripts": {
    "build": "npm run build:src && npm run build:test",
    "build:src": "tsc -p . ",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "npm run lint:src & npm run lint:test",
    "lint:src": "eslint -c ../../eslintrc.json --fix \"./src/**\"",
    "lint:test": "eslint -c ../../eslintrc.test.json --fix \"./__tests__/**\"",
    "clean": "rimraf dist && rimraf node_modules",
    "test": "jest --detectOpenHandles --no-cache",
    "test:watch": "jest --detectOpenHandles --no-cache --watch"
  },
  "dependencies": {
    "@arkecosystem/core-container": "^2.6.0-next.6",
    "@arkecosystem/core-event-emitter": "^2.6.0-next.6",
    "@arkecosystem/core-http-utils": "^2.6.0-next.6",
    "@arkecosystem/core-interfaces": "^2.6.0-next.6",
    "@arkecosystem/core-transactions": "^2.6.0-next.6",
    "@arkecosystem/crypto": "^2.6.0-next.6",
    "@internet-of-people/keyvault": "0.1.0-alpha.1",
    "@internet-of-people/did-manager": "0.1.0-alpha.1",
    "@hapi/boom": "^8.0.0",
    "@hapi/hapi": "^18.3.1",
    "awilix": "^4.2.2",
    "buffer": "5.4.2",
    "lodash.clonedeep": "4.5.0",
    "optional-js": "2.1.1",
    "p-queue": "6.2.1",
    "sqlite": "3.0.3",
    "socketcluster": "^14.3.5",
    "socketcluster-client": "^14.2.2"
  },
  "devDependencies": {
    "@types/socketcluster": "^14.0.2",
    "@types/socketcluster-client": "^13.0.3",
    "@types/bytebuffer": "5.0.40",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.14",
    "@types/hapi__hapi": "^18.2.5",
    "@types/hapi__boom": "^7.4.0",
    "@types/lodash.clonedeep": "4.5.6",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "eslint": "6.7.2",
    "eslint-plugin-import": "2.19.1",
    "jest-extended": "0.11.2",
    "jest": "24.9.0",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "typedoc": "0.15.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true
  }
