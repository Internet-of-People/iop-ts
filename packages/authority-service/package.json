{
  "name": "@internet-of-people/authority-service",
  "version": "2.0.4",
  "private": true,
  "author": {
    "url": "https://iop.global/dsf",
    "name": "Internet of People",
    "email": "prometheus@iop-ventures.com"
  },
  "description": "A simplistic authority service for Morpheus",
  "repository": "https://github.com/internet-of-people/morpheus-ts",
  "license": "AGPL-1.0-or-later",
  "main": "./dist/main.js",
  "typings": "./dist/main.d.ts",
  "scripts": {
    "build": "npm run build:src && npm run build:test",
    "build:src": "tsc -p . ",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "eslint -c ../../eslintrc.json --fix \"./src/**\"",
    "lint:test": "eslint -c ../../eslintrc.test.json --fix \"./__tests__/**\"",
    "clean": "rimraf dist && rimraf node_modules",
    "test": "jest --detectOpenHandles --no-cache",
    "test:watch": "jest --detectOpenHandles --no-cache --watch",
    "serve": "npm run build:src && node ."
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "testPathIgnorePatterns": [
      "__tests__/utils.ts"
    ]
  },
  "dependencies": {
    "@internet-of-people/sdk": "2.0.4",
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "bigint-hash": "0.2.2",
    "moment": "2.24.0",
    "sqlite": "3.0.3",
    "sql-template-strings": "2.2.2"
  },
  "devDependencies": {
    "@types/express": "4.17.1",
    "@types/jest": "24.0.23",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/supertest": "2.0.4",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "eslint-plugin-import": "2.19.1",
    "eslint": "6.7.2",
    "husky": "3.1.0",
    "jest-extended": "0.11.2",
    "jest": "24.9.0",
    "lerna": "3.18.5",
    "lodash.clonedeep": "4.5.0",
    "rimraf": "3.0.0",
    "supertest": "4.0.2",
    "ts-jest": "24.1.0",
    "typedoc": "0.15.0",
    "typescript": "3.8.3"
  }
}
