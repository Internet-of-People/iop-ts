{
  "name": "@internet-of-people/morpheus-crypto",
  "version": "3.1.0",
  "private": false,
  "author": {
    "url": "https://iop.global/dsf",
    "name": "Internet of People",
    "email": "prometheus@iop-ventures.com"
  },
  "description": "A webassembly generated DID validator and crypto primitives",
  "repository": "https://github.com/internet-of-people/morpheus-ts",
  "license": "LGPL-3.0-or-later",
  "main": "dist/index",
  "module": "dist/index",
  "browser": "dist/index",
  "types": "dist/index",
  "files": [
    "dist",
    "pkg"
  ],
  "scripts": {
    "prepare": "npm run build:src",
    "prepublishOnly": "npm run lint && npm run build:test && npm run test",    
    "build": "npm run build:src && npm run build:test",
    "build:src": "tsc -p . ",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "npm run lint:src & npm run lint:test",
    "lint:src": "eslint -c ../../eslintrc.json --fix \"./src/**\"",
    "lint:test": "eslint -c ../../eslintrc.test.json --fix \"./__tests__/**\"",
    "clean": "rimraf dist && rimraf node_modules",
    "test": "jest --detectOpenHandles --no-cache"
  },
  "dependencies": {
    "@internet-of-people/morpheus-crypto-wasm": "0.0.1",
    "multibase": "0.6.0",
    "optional-js": "2.1.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/multibase": "0.6.0",
    "@types/node": "12.12.14",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "eslint": "6.7.2",
    "eslint-plugin-import": "2.19.1",
    "jest": "24.9.0",
    "jest-extended": "0.11.2",
    "lodash.clonedeep": "4.5.0",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true
  }
}
