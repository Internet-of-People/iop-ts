{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "ban": [
      true,
      "eval",
      "$",
      {
        "name": ["assert", "equal"],
        "message": "Use 'strictEqual' instead."
      },
      {
        "name": ["*", "forEach"],
        "message": "Use a regular for loop instead."
      },
      {"name": ["it", "only"], "message": "don't commit focused tests"},
      {"name": ["describe", "only"], "message": "don't commit focused tests"}
    ],
    "await-promise": true,
    "no-console": false,
    "no-default-export": true,
    "no-floating-promises": true,
    "no-null-keyword": true,
    "no-shadowed-variable": true,
    "no-submodule-imports": true,
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "object-literal-sort-keys": false,
    "only-arrow-functions": true,
    "radix": false,
    "return-undefined": true,
    "no-empty-interface": false,
    "semicolon": [true, "always"],
    "quotemark": [true, "single", "jsx-double", "avoid-escape", "avoid-template"],

    "no-for-in": true,
    "no-import-side-effect": [true, {"ignore-module": "jest-extended"}],
    "no-internal-module": true,
    "no-reference": true,
    "no-unnecessary-type-assertion": true,
    "prefer-for-of": true,
    "unified-signatures": true,
    "ban-comma-operator": true,
    "curly": [true, "ignore-same-line"],
    "function-constructor": true,
    "label-position": true,
    "//": "the following rule does not handle Promise<void> and wrapping exceptions",
    "no-async-without-await": false,
    "//": "another comment",
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-dynamic-delete": true,
    "no-eval": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-inferred-empty-object-type": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-misused-new": true,
    "no-object-literal-type-assertion": true,
    "no-promise-as-boolean": true,
    "no-restricted-globals": [true, "name", "length", "event"],
    "no-return-await": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-this-assignment": [true, {"allow-destructuring": true}],
    "no-unbound-method": [true, {"allow-typeof": true, "whitelist": ["expect"]}],
    "no-unsafe-any": true
  },
  "exclude": ["node_modules", "dist"]
}
